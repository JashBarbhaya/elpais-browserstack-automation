<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="BrowserStack Suite" parallel="tests" thread-count="5">

    <!-- Desktop 1 -->
    <test name="Windows Chrome">
        <parameter name="os" value="Windows"/>
        <parameter name="osVersion" value="11"/>
        <parameter name="browserName" value="Chrome"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="deviceName" value=""/>
        <parameter name="realMobile" value="false"/>
        <classes>
            <class name="com.jash.ElPaisTest"/>
        </classes>
    </test>

    <!-- Desktop 2 -->
    <test name="Windows Edge">
        <parameter name="os" value="Windows"/>
        <parameter name="osVersion" value="10"/>
        <parameter name="browserName" value="Edge"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="deviceName" value=""/>
        <parameter name="realMobile" value="false"/>
        <classes>
            <class name="com.jash.ElPaisTest"/>
        </classes>
    </test>

    <!-- Desktop 3 -->
    <test name="Mac Safari">
        <parameter name="os" value="OS X"/>
        <parameter name="osVersion" value="Sonoma"/>
        <parameter name="browserName" value="Safari"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="deviceName" value=""/>
        <parameter name="realMobile" value="false"/>
        <classes>
            <class name="com.jash.ElPaisTest"/>
        </classes>
    </test>

    <!-- Mobile 1 -->
    <test name="iPhone 14">
        <parameter name="os" value="iOS"/>
        <parameter name="osVersion" value="16"/>
        <parameter name="browserName" value=""/>
        <parameter name="browserVersion" value=""/>
        <parameter name="deviceName" value="iPhone 14"/>
        <parameter name="realMobile" value="true"/>
        <classes>
            <class name="com.jash.ElPaisTest"/>
        </classes>
    </test>

    <!-- Mobile 2 -->
    <test name="Samsung Galaxy S23">
        <parameter name="os" value="Android"/>
        <parameter name="osVersion" value="13.0"/>
        <parameter name="browserName" value=""/>
        <parameter name="browserVersion" value=""/>
        <parameter name="deviceName" value="Samsung Galaxy S23"/>
        <parameter name="realMobile" value="true"/>
        <classes>
            <class name="com.jash.ElPaisTest"/>
        </classes>
    </test>

</suite>
